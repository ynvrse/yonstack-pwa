        "class-variance-authority": "^0.7.1",
        "clsx": "^2.1.1",
        "jotai": "^2.12.1",
        "lucide-react": "^0.532.0",
        "next-themes": "^0.4.6",
        "react": "^19.0.0",
        "react-dom": "^19.0.0",
        "react-error-boundary": "^5.0.0",
        "react-hotkeys-hook": "^4.6.1",
